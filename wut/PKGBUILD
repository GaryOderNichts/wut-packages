# Maintainer: WinterMute <davem@devkitpro.org>

_destdir=/opt/devkitpro/wut

pkgname=wut
pkgver=1.0.0_beta9
_gittag=1.0.0-beta9
pkgrel=1
pkgdesc="Open-source Wii U Libraries"
arch=('any')
url="https://github.com/devkitPro/wut"
license=('GPLv2')
groups=('wiiu-dev')

depends=('devkitPPC' 'wut-tools')

source=("https://github.com/devkitPro/wut/archive/$_gittag.tar.gz")
sha256sums=('a2fbc275c7f943ddb8b0822c9b76c0c78f51495574cc2ec9bbb969864829031c')
options=("!strip" "staticlibs")

build() {
    cd wut-$_gittag

    make
}

package() {
    cd wut-$_gittag

    make install DESTDIR="$pkgdir"
}

